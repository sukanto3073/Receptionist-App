<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authorized_Family_Member">

    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Authorized Family

Member"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <!-- User name section -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:text="First name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/username"
            android:hint=" Enter your first name"
            android:padding="15dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:text="Last name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/username"
            android:hint=" Enter your last name"
            android:padding="15dp"
            android:textSize="15sp" />


        <!-- User phone number section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:text="Phone"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/family_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/phone"
            android:hint=" Enter your phone number"
            android:inputType="number"
            android:padding="15dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/family_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:text="Relation"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/relation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_shape"
            android:hint="  Enter relation with patient"
            android:drawableLeft="@drawable/age"
            android:padding="15dp"
            android:textSize="15sp" />

        <!-- User address section -->




        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/back_bt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_bt"
                android:text="back"
                android:layout_marginRight="30dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/next_bt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_bt"
                android:layout_marginTop="10dp"
                android:text="next"
                android:textSize="15sp" />
        </LinearLayout>







    </LinearLayout>



</FrameLayout>